@model ASI.Basecode.Services.ServiceModels.TicketPageViewModel

@{
    ViewData["Title"] = "Tickets";
}   

@section styles {
    <link rel="stylesheet" href="~/css/user_tickets.css" />
}

@{
    var options = new List<dynamic>
    {
        new {
            Text = "Edit",
            IconClass = "bx bx-edit bx-xs bx-fw",
            TargetModal = "#editTicket",
            Action = "userEdit"
        },

        new {
			Text = "Delete",
			IconClass = "bx bx-trash bx-xs bx-fw",
			TargetModal = "#deleteTicket",
            Action = "userDelete"
		}
    };        
}

