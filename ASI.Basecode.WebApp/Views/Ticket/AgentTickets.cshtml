@model List<ASI.Basecode.Services.ServiceModels.TicketViewModel>

@{
    ViewData["Title"] = "Assigned Tickets";
}

<h1>All Assigned Tickets</h1>

<table class="table">
    <thead>
        <tr>
            <th>
                Title
            </th>
            <th>
                Priority
            </th>
            <th>
                Status
            </th>
            <th>
               Category
            </th>
             <th>
                Owner
            </th>
            <th>
                Date Created
            </th>
            <th>
                Date Assigned
            </th>
             <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Title)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Priority)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Status)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Category)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.CreatorName)
                </td>
                <td>
					@Html.DisplayFor(modelItem => item.DateCreated)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.DateAssigned)
                </td>
                <td>
                    @Html.ActionLink("Details", "Details", new { id = item.TicketId }) |
                </td>
            </tr>
        }
    </tbody>
</table>
