@using ASI.Basecode.Services.ServiceModels
@model UserViewModel
@{
    ViewBag.LoginView = true;
    ViewData["Title"] = "Register Page";
}
@section styles {
    <link rel="stylesheet" href="~/css/login.css" />
}
@Html.Partial("General_Header")
<div>
    <div class="login-container">
   
        <form method="post" action="/Account/Login" id="loginForm">
            <h2 class="text-center font-weight-bold">Alliance Help Desk</h2>
            <p>Alliance Help Desk: Your Dedicated Partner in Seamless Support Solutions</p>
            <div class="form-outline">
                <label class="form-label" style="font-size: 10px;" for="form2Example11">Username</label>
                <input type="text" id="form2Example11" class="form-control"
                       asp-for="UserId" placeholder="Enter username" />
                <span asp-validation-for="UserId" class="text-danger"></span>
            </div>
            <div class="form-outline">
                <label class="form-label" style="font-size: 10px;" for="form2Example22">Email</label>
                <input type="email" id="form2Example22" class="form-control"
                       asp-for="Password" placeholder="Enter Email" />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>
            <div class="form-outline">
                <label class="form-label" style="font-size: 10px;" for="form2Example22">Password</label>
                <input type="password" id="form2Example22" class="form-control"
                       asp-for="Password" placeholder="Enter password" />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>
            <div class="form-outline mb-4">
                <label class="form-label" style="font-size: 10px;" for="form2Example22">Password</label>
                <input type="password" id="form2Example22" class="form-control"
                       asp-for="Password" placeholder="Confirm password" />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>
            <button class="registerBtn w-100" type="submit">
                Register
            </button>
        </form>
        <img src="~/img/login-bg.png"
             alt="logo" />
    </div>
</div>
@section scripts {
    <script>
        // Check for error message and display Toastr notification
        var errorMessage = '@TempData["ErrorMessage"]';
        if (errorMessage) {
            toastr.error(errorMessage);
        }
    </script>
}