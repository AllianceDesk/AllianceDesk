@using ASI.Basecode.Services.ServiceModels
@model UserViewModel
@{
    ViewBag.LoginView = true;
    ViewData["Title"] = "Register Page";
}
@section styles {
    <link rel="stylesheet" href="~/css/login.css" />
}
@* @Html.Partial("General_Header") *@
<div>
    <div class="login-container">
    <form method="post" action="/Account/Register" id="loginForm">
        <h2 class="text-center font-weight-bold">Alliance Help Desk</h2>
        <p>Alliance Help Desk: Your Dedicated Partner in Seamless Support Solutions</p>
        <div class="form-outline">
            <label class="form-label" style="font-size: 10px;" for="form2Example22">Name</label>
            <input type="name" id="name" class="form-control"
                   asp-for="Name" placeholder="Enter Full Name (FirstName LastName)" />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>
        <div class="form-outline">
            <label class="form-label" style="font-size: 10px;" for="form2Example22">Username</label>
            <input type="username" id="username" class="form-control"
                   asp-for="UserName" placeholder="Enter Username" />
            <span asp-validation-for="UserName" class="text-danger"></span>
        </div>
        <div class="form-outline">
            <label class="form-label" style="font-size: 10px;" for="form2Example22">Email</label>
            <input type="email" id="email" class="form-control"
                   asp-for="Email" placeholder="Enter Email" />
            <span asp-validation-for="Email" class="text-danger"></span>
        </div>
        <div class="form-outline">
            <label class="form-label" style="font-size: 10px;" for="form2Example22">Password</label>
            <input type="password" id="password" class="form-control"
                   asp-for="Password" placeholder="Enter password" />
            <span asp-validation-for="Password" class="text-danger"></span>
        </div>
        <div class="form-outline mb-4">
            <label class="form-label" style="font-size: 10px;" for="form2Example22">Confirm Password</label>
            <input type="password" id="confirm-password" class="form-control"
                   asp-for="ConfirmPassword" placeholder="Confirm password" />
            <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
        </div>
        <button class="registerBtn w-100" type="submit">
            Register
        </button>
    </form>
    <img src="~/img/login-bg.png"
         alt="logo" />
</div>
@section scripts {
    <script>
        // Check for error message and display Toastr notification
        var errorMessage = '@TempData["ErrorMessage"]';
        if (errorMessage) {
            toastr.error(errorMessage);
        }
    </script>
}