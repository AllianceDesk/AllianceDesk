@model ASI.Basecode.Services.ServiceModels.AnalyticsViewModel

@{
    ViewData["Title"] = "Analytics";
}

<h2>Analytics</h2>

<!-- Display agent ticket counts -->
<h3>Agent Ticket Counts</h3>
<table class="table">
    <thead>
        <tr>
            <th>Agent Name</th>
            <th>Category</th>
            <th>Status</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var agent in Model.Agents)
        {
            <tr>
                <td>@agent.Agent.Name</td>
                <td>
                    <ul>
                        @foreach (var category in agent.TicketCountsByCategory)
                        {
                            <li>@category.Key: @category.Value</li>
                        }
                    </ul>
                </td>
                <td>
                    <ul>
                        @foreach (var status in agent.TicketCountsByStatus)
                        {
                            <li>@status.Key: @status.Value</li>
                        }
                    </ul>
                </td>
            </tr>
        }
    </tbody>
</table>

<!-- Display team ticket counts -->
<h3>Team Ticket Counts</h3>
<table class="table">
    <thead>
        <tr>
            <th>Team Name</th>
            <th>Category</th>
            <th>Status</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var team in Model.Teams)
        {
            <tr>
                <td>@team.TeamName</td>
                <td>
                    <ul>
                        @foreach (var category in team.TicketCountsByCategory)
                        {
                            <li>@category.Key: @category.Value</li>
                        }
                    </ul>
                </td>
                <td>
                    <ul>
                        @foreach (var status in team.TicketCountsByStatus)
                        {
                            <li>@status.Key: @status.Value</li>
                        }
                    </ul>
                </td>
            </tr>
        }
    </tbody>
</table>