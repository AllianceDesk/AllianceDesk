@section styles {
    <link rel="stylesheet" href="~/css/user_tickets.css" />

}

<div class="modal fade" id="create" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-xl modal-dialog-centered modal-dialog-scrollable">
        <div class="modal-content">
            <div class="ticket-modal1">

                <div class="top_modal d-flex justify-content-between align-items-center mb-5">                   
                    <h3>Create A New Article</h3>                    
                </div>

                <div class="mb-3 d-flex justify-content-end">

                    <button type="button" class="btn btn-outline-danger me-2"><i class='bx bxl-telegram bx-xs bx-fw' style="color: #E21818; cursor: pointer; transform: scale(1); padding-top: 0.06em;"></i> Save</button>
                    <button type="button" class="btn btn-outline-danger me-2"><i class='bx bx-notepad bx-xs bx-fw' style="color: #E21818; cursor: pointer; transform: scale(1); padding-top: 0.06em;"></i>Save as Draft</button>
                    <button type="button" class="btn btn-outline-danger me-2" data-bs-dismiss="modal"> <i class='bx bx-x bx-xs bx-fw' style="color: #E21818; cursor: pointer; transform: scale(1.4); padding-top: 0.06em;"></i>Cancel</button>

                </div>
                

                <hr style="border-top: 2px solid #000; width: 98%;" class="mb-3" />

                <div class="form-floating mb-3">
                    <input type="text" class="form-control" id="title" placeholder="">
                    <label for="floatingTextarea">Title</label>
                </div>

                <textarea class="form-control" placeholder="Content here" id="content" rows="10"></textarea>
                
           </div>
        </div>
    </div>
</div>
