                data: { articleId: articleId },
                success: function (response) {
                    // Append the modal content to the body
                    $('body').append(response);
                    // Show the modal
                    $('#detail').modal('show');
                    // Handle success response
                    // You can update the UI or process data here
                    console.log('Article loaded successfully!');
                },
                error: function (xhr, status, error) {
                    console.error('Error fetching user details:', status, error);
                }
            });
        });

        // Hide the DetailsModal when close is clicked or when clicking outside the modal
        $('#detail').on('hidden.bs.modal', function () {
            $(this).remove();
        });

        // Ensure modal close button works as expected
        $(document).on('click', '.closebtn1', function () {
            $('#detail').modal('hide');
        });

        // Show edit article when clicked
        $(document).on('click', '[data-edit-article]', function () {
            var articleId = $(this).data('article-id');
            $.ajax({
