                        $('#edit').modal('hide'); // Hide the modal after successful submission
                        window.location.reload(); // Reload the page to reflect changes
                    },
                    error: function (xhr, status, error) {
                        console.error('Error submitting form:', status, error);
                    }
                });
            });
        });

        // Show delete article when clicked
        $(document).on('click', '[data-delete-article]', function () {
            var articleId = $(this).data('article-id');
            $.ajax({
                url: '/KnowledgeBase/Delete',
                type: 'GET',
                data: { articleId: articleId },
                success: function (response) {
                    $('body').append(response);
                    // Show the modal
                    $('#delete').modal('show');
                    // Handle success response
                    // You can update the UI or process data here
                    console.log('Article loaded successfully!');
                },
                error: function (xhr, status, error) {
                    console.error('Error fetching user details:', status, error);
                }
            });
        });

