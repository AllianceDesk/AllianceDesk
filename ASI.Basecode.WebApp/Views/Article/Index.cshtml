@model IEnumerable<ASI.Basecode.Services.ServiceModels.ArticleViewModel>

@section styles {
    <link rel="stylesheet" href="~/css/style.css" />
    <link rel="stylesheet" href="~/css/KnowledgeBase/Index.css" />
    <script src="https://kit.fontawesome.com/1e457ac318.js" crossorigin="anonymous"></script>
    <link href='https://unpkg.com/boxicons@2.1.4/css/boxicons.min.css' rel='stylesheet'>

}

@{
    ViewData["Title"] = "Knowledge Base";
}

@Html.Partial("Admin_Header")
<div class="main">
    @Html.Partial("Admin_Sidebar")
    <div class="content">
        <div class="header-container">
            <h1 class="page-title">Knowledge Base</h1>
            <div class="addarticle-container">
                <a asp-action="Create" class="addArticleBtn">Add Article</a>
                <div class="addArt-dropdown">
                    <button class="dp-logo">
                        <i class="fa-solid fa-angle-down" style="color: white;"></i>
                    </button>
                    <div class="dropdown-content">
                        <ul class="dropdown-list">
                            <li>
                                <i class='bx bxs-file-doc'></i>
                                <a href="#">Document</a>
                            </li>
                            <li>
                                <i class='bx bxs-file-pdf'></i>
                                <a href="#">PDF</a>
                            </li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>

        <div class="article-navigation">
            <div class="sections">
                <a asp-action="Index" class="article-list @(ViewContext.RouteData.Values["Action"].ToString() == "Index" ? "active-link" : "")">Article List</a>
                <a asp-action="Favorites" class="favorites @(ViewContext.RouteData.Values["Action"].ToString() == "Favorites" ? "active-link" : "")">My Favorites</a>
            </div>
            <div class="search-filter">
                <form>
                    <div class="search">
                        <i class='bx bx-search' style='color:#5f5f5f'></i>
                        <input class="search-input" type="search" placeholder="Search">
                    </div>
                </form>
                <button class="filter-btn">
                    <i class='bx bx-filter-alt' style='color:#5f5f5f'></i>Filter
                </button>
            </div>
        </div>

        <ul class="articles">
            <li>
                @foreach (var item in Model)
                {
                    <div>
                        @Html.DisplayFor(modelItem => item.Body)
                    </div>
                    <h4>
                        @Html.DisplayFor(modelItem => item.Title)
                    </h4>
                    <h6>
                        @Html.DisplayFor(modelItem => item.CategoryNavigation)
                    </h6>
                    <h5>
                        @Html.DisplayFor(modelItem => item.DateUpdated)
                    </h5>
                    @*                 <td>
                @Html.ActionLink("Edit", "Edit", new { Id = item.ArticleId }) |
                @Html.ActionLink("Details", "Details", new { Id = item.ArticleId }) |
                @Html.ActionLink("Delete", "Delete", new { Id = item.ArticleId })
                </td> *@
                }
            </li>
        </ul>
    </div>


    <div class="modal fade" id="deleteModal">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="deleteModalLabel">Confirm Delete</h5>
                    <button type="button" class="close" data-dismiss="modal">
                        <span>&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    Are you sure you want to delete this item?
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancel</button>
                    <button type="button" class="btn btn-danger" id="confirmDeleteBtn">Delete</button>
                </div>
            </div>

        </div>

@*         @Html.Partial("CreateModal") *@
        
    </nav>
    
    <main>
        @foreach (var item in Model.Articles){
            <a href="#" class="link_card">
            @* <a href="/KnowledgeBase/@item.ArticleId" class="link_card" data-view-article data-article-id="@item.ArticleId"> *@
                <div class="article_card" data-bs-toggle="modal" data-bs-target="#detail" data-view-article data-article-id="@item.ArticleId">
                    <div class="article_top mb-4">
                        <h5>@Html.DisplayFor(modelItem => item.Title)</h5>
                        <p>@Html.DisplayFor(modelItem => item.DateUpdated)</p>
                    </div>

                    <p class="mb-3" style="font-size: 14px;">@Html.DisplayFor(modelItem => item.Body)</p>

                    <h6 class="article_category">@Html.DisplayFor(modelItem => item.CategoryNavigation)</h6>
                </div>
            </a>
        }
@*         @Html.Partial("DetailModal") *@
    </main>
    
</div>

