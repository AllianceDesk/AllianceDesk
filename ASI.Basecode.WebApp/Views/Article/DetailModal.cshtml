@model ASI.Basecode.Services.ServiceModels.ArticleViewModel

@section styles {
    <link rel="stylesheet" href="~/css/user_tickets.css" />

}

<div class="ticket-modal1" style="padding: 1em;">
    @Html.HiddenFor(model => model.ArticleId)
    <div class="top_modal d-flex justify-content-between align-items-center mb-4">
        @if (ViewBag.RoleId == 3)
        {
            <button type="button" class="btn closebtn1" data-bs-dismiss="modal" data-backToKBModal-btn>
                <i class='bx bx-left-arrow-alt bx-sm icon' style="color: #45474B; cursor: pointer;"></i>
            </button>
        }
        else
        {
            <form asp-controller="Article" asp-action="Index" method="get">
                <button type="submit" class="btn closebtn1" data-bs-dismiss="modal"><i class='bx bx-left-arrow-alt bx-sm icon' style="color: #45474B; cursor: pointer;"></i></button>
            </form>
        }
    </div>

    <div class="top-container mb-3 d-flex justify-content-end">

        
        <div class="btn-group d-flex justify-content-end" style="height: 3.5em; width: 25em; font-size: 10px;">
            @if (Model.IsFavorite)
            {
                <button type="button" class="btn btn-danger me-1" data-article-removeFavorites-btn data-article-id="@Model.ArticleId">
                    <i class="fa-solid fa-star" style="color: white; cursor: pointer;"></i> Favorites
                </button>
            }
            else
            {
                <button type="button" class="btn btn-danger me-1" data-article-addfavorites-btn data-article-id="@Model.ArticleId">
                    <i class="fa-regular fa-star" style="color: white; cursor: pointer;"></i> Favorites
                </button>
            }

            <button type="button" class="btn btn-danger" data-bs-toggle="dropdown" aria-expanded="false">
                <i class='bx bx-dots-horizontal-rounded bx-sm icon' style="color: white; cursor: pointer;"></i>
            </button>

            <ul class="dropdown-menu">
                <li><a class="dropdown-item" href="#" data-bs-toggle="modal" data-bs-target="#edit" data-article-edit-btn data-article-id="@Model.ArticleId">Edit</a></li>
                <li><a class="dropdown-item" href="#" data-bs-toggle="modal" data-bs-target="#delete" data-article-delete-btn data-article-id="@Model.ArticleId">Delete</a></li>
            </ul>
        </div>

    </div>

   <hr class="mb-2" style="border-top-color: black; width: 95%;"/>

    <h4 class="mb-2 ml-3" >@Html.DisplayFor(model => model.Title)</h4>
    <p class="email mb-4 ml-3" style="font-size:12px;">Last Edited by:  @Html.DisplayFor(model => model.UpdatedBy)</p>
    <div style="padding: 1em;">
        <p class="article_details" style="overflow-y: auto; height: 20em; font-size: 14px;">
            @Html.DisplayFor(model => model.Body)
        </p>
    </div>
</div>