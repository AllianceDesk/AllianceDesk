@using Microsoft.AspNetCore.Http

@inject IHttpContextAccessor HttpContextAccessor
<header>
    <div class="logosec hover-pointer">
        <img src="~/img/alliancedesk-logo.png"
             style="width: 185px;" alt="logo"
             onclick="window.location.href = '@Url.Action("Index", "Home")';">
    </div>
    
    <div class="logosec">
        
        <i class='bx bx-bell bx-sm' style="color: #3D3B40; cursor: pointer;"></i>
        <i class='bx bx-cog bx-sm' style="color: #3D3B40; cursor: pointer;"></i>

        <div class="mr-20 hover-pointer" style="position: relative">           

            <div class="dp">                                
                <img src="~/img/profile-logo.png" class="dpicn hover-pointer" alt="dp">           
            </div>

            <div class="dropdown">
                <ul>                    
                    <li>
                        <i class="bx bx-user bx-xs bx-fw" style="color: #3D3B40;"></i>
                        <a href="#">Profile</a>
                    </li>
                    <li>
                        <i class="bx bx-log-out bx-xs bx-fw" style="color: #3D3B40;"></i>
                        <a asp-action="SignOutUser" asp-controller="Account">Logout</a>
                    </li>
                </ul>
            </div>

        </div>
    </div>
</header>
