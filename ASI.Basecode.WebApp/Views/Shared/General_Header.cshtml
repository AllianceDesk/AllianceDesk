@using Microsoft.AspNetCore.Http

@inject IHttpContextAccessor HttpContextAccessor
<header>
    <div class="logosec hover-pointer">
        <img src="~/img/alliancedesk-logo.png"
             style="width: 185px;" alt="logo"
             onclick="window.location.href = '@Url.Action("Index", "Home")';">
    </div>
    <div class="logosec">
        <!--- @HttpContextAccessor.HttpContext.Session.GetString("UserName") -->
        <div class="mr-20 hover-pointer" style="position: relative">
            <a asp-controller="Account" asp-action="Register" class="registerBtn">Register</a>
            <a asp-controller="Account" asp-action="Login" class="loginBtn">Login</a>
            </div>
            <div class="dropdown">
                <ul>
                    <li>
                        <i class="fa-solid fa-gear"></i>
                        <a href="#">Settings</a>
                    </li>
                    <li>
                        <i class="fa-solid fa-right-from-bracket"></i>
                        <a asp-action="SignOutUser" asp-controller="Account">Logout</a>
                    </li>
                </ul>
            </div>
        </div>
    </div>
</header>
