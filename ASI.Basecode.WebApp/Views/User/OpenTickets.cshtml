    </div>

</div>

<script>

        document.addEventListener('DOMContentLoaded', function () {
            var dpIcon = document.querySelector('.dpicn');
            var dropdownMenu = document.getElementById('dropdownMenu');

            dpIcon.addEventListener('click', function (event) {
                event.stopPropagation(); // Prevents event from bubbling up and immediately closing dropdown

                if (dropdownMenu.style.display === 'block') {
                    dropdownMenu.style.display = 'none'; // Close dropdown if already open
                } else {
                    dropdownMenu.style.display = 'block'; // Open dropdown if closed
                }
            });
        }); // Ensure this closing brace was missing in your provided code

</script>
